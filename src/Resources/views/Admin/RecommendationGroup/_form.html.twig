{% from "@SyliusAdmin/Macro/translationForm.html.twig" import translationFormWithSlug %}

<div class="ui two column stackable grid">
    <div class="column">
        <div class="ui segment">
            {{ form_errors(form) }}
            <div class="two fields">
                {{ form_row(form.code) }}
                {{ form_row(form.position) }}
            </div>
        </div>
    </div>
</div>
<div class="ui one column stackable grid">
    <div class="column">
        <div class="field">
            {{ translationFormWithSlug(form.translations, '@Tavy315SyliusRecommendationsPlugin/Admin/RecommendationGroup/_slugField.html.twig', resource) }}
        </div>
    </div>
</div>
